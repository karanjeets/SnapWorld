
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="edu.usc.snapworld.ResultsFragment"
    android:background="@color/pink">


    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="Search Distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchLabel"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:text="100 mi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distanceLabel"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        />
    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/seekBar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:progress="100"
        />

    <ListView
        android:layout_below="@+id/seekBar"
        android:id="@+id/imageList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:numColumns="1"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2dp"
        android:clickable="true"
        android:backgroundTintMode="add"
        android:fadeScrollbars="true"
        android:layout_marginTop="20dp"
        />
    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/menu"
            />
        <ImageButton
            android:id="@+id/fab_general"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|end"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/shuffle"
            app:layout_anchor="@id/fab"
            android:visibility="gone"
            app:layout_anchorGravity="top"
            />
        <ImageButton
            android:id="@+id/fab_food"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|end"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/food"
            app:layout_anchor="@id/fab_general"
            android:visibility="gone"
            app:layout_anchorGravity="top"
            />
        <ImageButton
            android:id="@+id/fab_sports"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|end"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/football"
            app:layout_anchor="@id/fab_food"
            android:visibility="gone"
            app:layout_anchorGravity="top"
            />
        <ImageButton
            android:id="@+id/fab_his"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|end"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/museum"
            app:layout_anchor="@id/fab_sports"
            android:visibility="gone"
            app:layout_anchorGravity="top"
            />
        <ImageButton
            android:id="@+id/fab_education"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|end"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/library"
            app:layout_anchor="@id/fab_his"
            android:visibility="gone"
            app:layout_anchorGravity="top"
            />
        <ImageButton
            android:id="@+id/fab_nature"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|end"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/forest"
            app:layout_anchor="@id/fab_education"
            android:visibility="gone"
            app:layout_anchorGravity="top"
            />


    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
